{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "mocha --exit src/tests/routes/flashcard.test.js src/tests/routes/flashcardset.test.js src/tests/routes/user.test.js --timeout 120000",
    "test-local": "set NODE_ENV=test&& nyc --reporter=lcov --reporter=text npm run test",
    "test-coverage": "nyc --reporter=lcov --reporter=text npm run test && coveralls < coverage/lcov.info",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix ../frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "cypress:open": "npx cypress open",
    "cypress:test": "concurrently \"npm run server\" \"npm run client\" \"wait-on http://localhost:8080 http://localhost:3000 && npx cypress run --spec 'cypress/integration/sample_spec.js'\" ",
    "frontend-install": "npm install --prefix ../frontend"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.7",
    "mongoose-unique-validator": "^2.0.3",
    "request": "^2.88.2",
    "tesseract.js": "^2.1.1",
    "wait-on": "^5.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "cypress": "^4.11.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.1.0"
  }
}
